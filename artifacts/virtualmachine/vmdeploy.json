{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmCount": {
            "type": "int",
            "metadata": {
                "description": "Number of VMs to be spun"
            }
        },
        "vmName": {
            "type": "string",
            "metadata": {
                "description": "Name of the VMs"
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Local admin username for the VMs"
            }
        },
        "adminPassword": {
            "type": "string",
            "metadata": {
                "description": "Local admin password for the VMs"
            }
        },
        "dataDiskCount": {
            "type": "int",
            "metadata": {
                "description": "Number of data disks that need to be attached to each VM"
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('vmName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2020-06-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_B2ms"
                },
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2019-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('vmName'), '_OSDisk')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "copy": [
                        {
                            "name": "dataDisks",
                            "count": "[parameters('dataDiskCount')]",
                            "input": {
                                "name": "[concat(parameters('vmName'), '_DataDisk_', copyIndex('dataDisks'))]",
                                "diskSizeGB": 32,
                                "lun": "[copyIndex('dataDisks')]",
                                "createOption": "Empty",
                                "caching": "None",
                                "managedDisk": {
                                    "storageAccountType": "Premium_LRS"
                                }
                            }
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'), '_nic'))]"
                        }
                    ]
                },
                "licenseType": "Windows_Server",
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
            }
        }
    ],
    "outputs": {
        "resourceId": {
            "type": "array",
            "copy": {
                "count": "[parameters('vmCount')]",
                "input": {
                    "value": "[resourceId('Microsoft.Computer/virtualMachines', parameters('vmName'))]"
                }
            }
        }   
    }
}